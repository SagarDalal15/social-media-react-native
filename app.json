{
  "expo": {
    "scheme":"reactsocialapptutorial",
    "name": "social-media-app",
    "slug": "social-media-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.twentyone.socialmediaapp",
      "googleServicesFile": "./google-services.json",


      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
      
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow social-media-app to access your photos.",
          "savePhotosPermission": "Allow social-media-app to save photos.",
          "isAccessMediaLocationEnabled": "true"
        }
       
      ]
    ]
  }
}
